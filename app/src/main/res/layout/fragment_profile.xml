<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".features.profile.Profile"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginStart="-10dp"
                android:layout_marginTop="-30dp"
                android:layout_toEndOf="@id/image1"
                android:scaleType="fitXY"
                android:src="@drawable/vector_mdpi" />

            <ImageView
                android:id="@+id/image1"
                android:layout_width="124dp"
                android:layout_height="205dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-100dp"
                android:rotationY="180"
                android:src="@drawable/vector_mdpi_3" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="174dp"
                android:layout_height="285dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="204dp"
                android:layout_marginTop="-130dp"
                android:scaleType="fitXY"
                android:src="@drawable/vector_mdpi_2" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewBack"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="37dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <FrameLayout
            android:layout_marginTop="-50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="50dp"
                android:layout_width="108dp"
                android:layout_height="108dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center_horizontal"
                    app:border_color="@color/white"
                    app:border_width="9dp"
                    android:src="@drawable/avat"
                    android:layout_width="108dp"
                    android:layout_height="108dp"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginBottom="5dp"
                android:layout_marginStart="30dp"
                android:layout_gravity="bottom|center_horizontal"
                app:cardCornerRadius="50dp"
                android:layout_width="27dp"
                android:layout_height="27dp">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_camera_alt_24"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <TextView
            android:id="@+id/textViewFullnameProfile"
            android:layout_marginTop="13dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Quach Khieu Toan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:gravity="center"
            android:text="Edit profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="49dp"
            android:textSize="16sp"
            android:layout_marginHorizontal="27dp"
            android:text="Full name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:textAllCaps="false"
            android:typeface="normal"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            app:backgroundTint="@null"
            android:id="@+id/btnFullnameProfile"
            android:textStyle="normal"
            android:text="Quach Khieu Toan"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="27dp"
            android:background="@drawable/custom_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="29dp"
            android:textSize="16sp"
            android:layout_marginHorizontal="27dp"
            android:text="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:textAllCaps="false"
            android:typeface="normal"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            app:backgroundTint="@null"
            android:id="@+id/btnEmailProfile"
            android:text="khieutoan@gmail.com"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="27dp"
            android:background="@drawable/custom_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="29dp"
            android:textSize="16sp"
            android:layout_marginHorizontal="27dp"
            android:text="Phone number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:typeface="normal"
            app:backgroundTint="@null"
            android:id="@+id/btnPhoneNumberProfile"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:text="0123456789"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="27dp"
            android:background="@drawable/custom_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>