<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginTop="49dp"
        android:textSize="16sp"
        android:layout_marginHorizontal="27dp"
        android:text="Full name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="Enter full name here"
        android:id="@+id/editTextFullnameProfileDialog"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="27dp"
        android:background="@drawable/custom_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_marginHorizontal="27dp"
        android:text="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/editTextEmailProfileDialog"
        android:hint="Enter email here"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="27dp"
        android:background="@drawable/custom_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_marginHorizontal="27dp"
        android:text="Phone number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/editTextPhoneNumberProfileDialog"
        android:inputType="number"
        android:hint="Enter phone number here"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="27dp"
        android:background="@drawable/custom_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginBottom="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="50dp"
        android:id="@+id/buttonOkProfileDialog"
        android:text="Ok"
        android:background="@drawable/custom_button"
        app:backgroundTint="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>